extends base

mixin categoryCard(image, text)
  div.main-content-categories-card(data-id=text)
    img.main-content-categories-card_img(src=`/img/static/${image}` alt="image")
    p.main-content-categories-card_text= text

block content 

  div.main-content-carousel
    div.main-content-carousel-card
      p.main-content-carousel-card_text
        span Make Your Plants Strong
      img.main-content-carousel-card_img(src="/img/static/fertilizer1.png")

    div.main-content-carousel-card(style="background-color: #70287a")
      p.main-content-carousel-card_text
        span Discover a Range of Plants
      img.main-content-carousel-card_img(src="/img/static/bonsai.png")

    div.main-content-carousel-card(style="background-color: #245d4c")
      p.main-content-carousel-card_text
        span Kickstart gardening with seeds
      img.main-content-carousel-card_img(src="/img/static/planting.png")

    div.main-content-carousel-card
      p.main-content-carousel-card_text
        span Kitchen compost in house
      img.main-content-carousel-card_img(src="/img/static/compost.png")

  p.section-title Categories
  div.main-content-categories
    - const categories = ['Fertilizers', 'Seeds', 'flowers pot', 'Plants', 'accessories', 'tools']
    each category in categories
      +categoryCard(`/${category}.png`, category)
