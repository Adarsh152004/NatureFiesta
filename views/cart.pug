extends base

block content
    section#cart.section-p1
        table(width="100%")
            thead
                tr
                    td Remove
                    td Image
                    td Product
                    td Price
                    td Quantity
                    td Subtotal
            each product in products
                tbody
                    tr
                        td
                            a(href="#")
                                i.far.fa-times-circle
                        td
                            img(src=`/img/${product.category}/${product.imageCover}`, alt="")
                        td= product.name
                        td= `Rs. ${product.price}`
                        td
                            input(type="number", value="1")
                        td= `Rs. ${product.price}`
            
            tfoot
                tr
                    td(colspan="5") Total
                    td Rs. 0
                tr
                    td(colspan="6")
                        a.checkout-btn(href="#", role="button") Checkout

                        
                



