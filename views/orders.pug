extends account 

block content
    .user
        .user-nav
            a.user-nav-link(href="/me")
                i.fa-solid.fa-gear.user-nav-link__icon
                | Profile Setting
            a.user-nav-link(href="/orders")
                i.fa-solid.fa-bag-shopping.user-nav-link__icon
                | Orders
            a.user-nav-link(href="/reviews")
                i.fa-solid.fa-star.user-nav-link__icon
                | Reviews
            a.user-nav-link(href="/billing")
                i.fa-solid.fa-wallet.user-nav-link__icon
                | Billing
        .user-content.flex-fix
            .user-content-orders
                h2.form-heading Order History
                .order-history
                    //- Order Card
                    .order-card
                        .order-header
                            .order-id #ORD-20230715-001
                            .order-date 2023-07-15
                            .order-status.status-completed Completed
                        .order-details
                            .order-items
                                .order-item
                                    img.order-item-img(src="/img/products/product1.jpg" alt="Product")
                                    .order-item-info
                                        .order-item-name Organic Cotton T-Shirt
                                        .order-item-price ₹1,299
                                        .order-item-quantity Quantity: 2
                                .order-item
                                    img.order-item-img(src="/img/products/product2.jpg" alt="Product")
                                    .order-item-info
                                        .order-item-name Bamboo Toothbrush Set
                                        .order-item-price ₹399
                                        .order-item-quantity Quantity: 1
                            .order-summary
                                .order-summary-row
                                    .order-summary-label Subtotal:
                                    .order-summary-value ₹2,997
                                .order-summary-row
                                    .order-summary-label Shipping:
                                    .order-summary-value ₹99
                                .order-summary-row
                                    .order-summary-label Discount:
                                    .order-summary-value -₹200
                                .order-total
                                    .order-summary-label Total:
                                    .order-summary-value ₹2,896
                        .order-actions
                            button.order-action-btn.order-action-primary Re-order
                            button.order-action-btn.order-action-secondary View Details

                    //- Repeat order cards as needed
                    .no-orders No orders found